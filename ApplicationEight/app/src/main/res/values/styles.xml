<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CustomEditText">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">#ad1831</item>
        <item name="colorControlActivated">#FFC0CB</item>
    </style>
    <style name="CustomButton">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="CustomTextView">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">#f44289</item>
    </style>
    <style name="CustomRadioButton">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="CustomTextViewHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">#f44289</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="CustomEditTextDark">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">#ad1831</item>
        <item name="colorControlActivated">#FFC0CB</item>
    </style>
    <style name="CustomButtonDark">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="CustomTextViewDark">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">#f44289</item>
    </style>
    <style name="CustomRadioButtonDark">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="CustomTextViewHeaderDark">
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">#f44289</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>
